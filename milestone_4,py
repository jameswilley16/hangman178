
import random

class Hangman:
    def __init__(self, word_list, num_lives=5):
        self.word_list = word_list
        self.num_lives = num_lives
        
        self.word = random.choice(self.word_list)
        self.word_guessed = ["_"]*len(self.word)
        self.num_letters = len(set(self.word))
        self.list_of_guesses = []

    def check_guess(self, guess):
        lower_case_guess = guess.lower()
                
        if lower_case_guess in self.word:
            print(f'Good guess! {lower_case_guess} is in the word.')
            self.word_guessed.append(lower_case_guess)  # Add guessed letter to word_guessed
        else:
            self.num_lives = self.num_lives - 1
            print(f'Try again! {lower_case_guess} is not in the word.')
            print(f'You have {self.num_lives} lives left!' )
        
        word_list = list(self.word)
        for letter in word_list:
          letter_index = word_list.index(letter)
          if letter == lower_case_guess:
            
            self.word_guessed[letter_index] = letter
            word_list[letter_index] = "Â£"
            self.word_guessed.pop()
          
        self.num_letters = self.num_letters -1
        print(self.word_guessed)
          

    def ask_for_input(self):
        while True:
            guess = input("Please guess a letter: ")
            if len(guess) != 1 or not guess.isalpha():
                print("Please enter a single alphabetical character.")
            elif guess in self.list_of_guesses:
                print("You have already tried that letter.")
            else:
                self.check_guess(guess)
                self.list_of_guesses.append(guess)
